<?xml version="1.0" encoding="utf-8"?>
<!-- Tablet layout (600dp+) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/adaptive_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="24dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="800dp">

        <!-- Header - larger for tablets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/adaptive_primary"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_roku"
                    android:layout_gravity="center"
                    app:tint="@color/adaptive_text_on_primary" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stremio Roku Bridge"
                android:textSize="42sp"
                android:textColor="@color/adaptive_text_primary"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream content from Stremio to your Roku device with ease"
                android:textAppearance="@style/TextAppearance.Stremio.Body1"
                android:gravity="center"
                android:layout_marginHorizontal="32dp" />

        </LinearLayout>

        <!-- Status and Controls in horizontal layout for tablets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Stremio.Card"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/status_indicator_online"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ready to discover Roku devices"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons - vertical stack for tablet -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/refreshButton"
                    style="@style/Widget.Stremio.Button"
                    android:layout_width="160dp"
                    android:layout_height="56dp"
                    android:text="Refresh"
                    android:layout_marginBottom="8dp"
                    app:icon="@drawable/ic_refresh"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manualIpButton"
                    style="@style/Widget.Stremio.Button.Outlined"
                    android:layout_width="160dp"
                    android:layout_height="56dp"
                    android:text="Manual IP"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/testButton"
                    style="@style/Widget.Stremio.Button.Secondary"
                    android:layout_width="160dp"
                    android:layout_height="56dp"
                    android:text="Test Video"
                    app:icon="@drawable/ic_play"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </LinearLayout>

        <!-- Devices Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Devices"
            android:textAppearance="@style/TextAppearance.Stremio.Headline2"
            android:layout_marginBottom="20dp" />

        <!-- Devices List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/devicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ic_roku_disconnected"
                app:tint="@color/adaptive_text_hint"
                android:alpha="0.6"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Roku devices found"
                android:textSize="28sp"
                android:textColor="@color/adaptive_text_primary"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.8"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make sure your Roku and device are on the same WiFi network, then tap Refresh to search again"
                android:textAppearance="@style/TextAppearance.Stremio.Body1"
                android:gravity="center"
                android:layout_marginHorizontal="32dp" />

        </LinearLayout>

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Stremio.Card"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to use"
                    android:textAppearance="@style/TextAppearance.Stremio.Headline2"
                    android:layout_marginBottom="16dp" />

                <!-- Horizontal instruction layout for tablets -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="1"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1"
                            android:background="@drawable/status_background_adaptive"
                            android:gravity="center"
                            android:textColor="@color/adaptive_text_on_primary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ensure same WiFi network"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="2"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1"
                            android:background="@drawable/status_background_adaptive"
                            android:gravity="center"
                            android:textColor="@color/adaptive_text_on_primary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select your Roku device"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="3"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1"
                            android:background="@drawable/status_background_adaptive"
                            android:gravity="center"
                            android:textColor="@color/adaptive_text_on_primary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Use Stremio's external app feature"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
