<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Adaptive Light/Dark Theme -->
    <style name="Theme.StremioBridge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/adaptive_primary</item>
        <item name="colorPrimaryVariant">@color/adaptive_primary_dark</item>
        <item name="colorOnPrimary">@color/adaptive_text_on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/adaptive_accent</item>
        <item name="colorSecondaryVariant">@color/adaptive_primary_light</item>
        <item name="colorOnSecondary">@color/adaptive_text_on_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/adaptive_background</item>
        <item name="colorSurface">@color/adaptive_surface</item>
        <item name="colorOnSurface">@color/adaptive_text_primary</item>
        
        <!-- Material Design 3 colors -->
        <item name="colorSurfaceVariant">@color/adaptive_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/adaptive_text_secondary</item>
        <item name="colorOutline">@color/adaptive_outline</item>
        <item name="colorOutlineVariant">@color/adaptive_outline_variant</item>
        
        <!-- Status and Navigation bars -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/adaptive_background</item>
        <item name="android:navigationBarColor">@color/adaptive_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Window properties -->
        <item name="android:windowBackground">@color/adaptive_background</item>
        <item name="android:textColorPrimary">@color/adaptive_text_primary</item>
        <item name="android:textColorSecondary">@color/adaptive_text_secondary</item>
        <item name="android:textColorHint">@color/adaptive_text_hint</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Enable edge-to-edge display -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- Light theme button styles -->
    <style name="Widget.Stremio.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/adaptive_text_on_primary</item>
        <item name="backgroundTint">@color/adaptive_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/adaptive_primary_light</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:minWidth">0dp</item>
    </style>
    
    <style name="Widget.Stremio.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/adaptive_primary</item>
        <item name="strokeColor">@color/adaptive_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/adaptive_primary_light</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:minWidth">0dp</item>
    </style>
    
    <style name="Widget.Stremio.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/adaptive_text_primary</item>
        <item name="backgroundTint">@color/adaptive_surface_variant</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:minWidth">0dp</item>
    </style>
    
    <!-- Light theme card style -->
    <style name="Widget.Stremio.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/adaptive_card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeColor">@color/adaptive_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.Stremio.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/adaptive_text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.Stremio.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/adaptive_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.Stremio.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/adaptive_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.Stremio.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/adaptive_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.Stremio.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/adaptive_text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
