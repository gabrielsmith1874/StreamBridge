<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/adaptive_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Compact Header for landscape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/adaptive_primary"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_roku"
                    android:layout_gravity="center"
                    app:tint="@color/adaptive_text_on_primary" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stremio Roku Bridge"
                    android:textSize="20sp"
                    android:textColor="@color/adaptive_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stream content to your Roku device"
                    android:textAppearance="@style/TextAppearance.Stremio.Body2" />

            </LinearLayout>

        </LinearLayout>

        <!-- Horizontal layout for landscape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Left side: Status and controls -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <!-- Status Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Stremio.Card"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/status_indicator_online"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ready to discover Roku devices"
                            android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/refreshButton"
                        style="@style/Widget.Stremio.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Refresh"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/manualIpButton"
                        style="@style/Widget.Stremio.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Manual IP"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testButton"
                        style="@style/Widget.Stremio.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Test Video"
                        app:icon="@drawable/ic_play"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right side: Devices list -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Devices"
                    android:textAppearance="@style/TextAppearance.Stremio.Headline2"
                    android:layout_marginBottom="12dp" />

                <!-- Devices List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/devicesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_roku_disconnected"
                        app:tint="@color/adaptive_text_hint"
                        android:alpha="0.6"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Roku devices found"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1"
                        android:textStyle="bold"
                        android:alpha="0.8"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap Refresh to search again"
                        android:textAppearance="@style/TextAppearance.Stremio.Body2"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
