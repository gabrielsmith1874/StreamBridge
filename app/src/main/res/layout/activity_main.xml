<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/adaptive_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Modern Header with Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/adaptive_primary"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/icon"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stremio Roku Bridge"
                android:textAppearance="@style/TextAppearance.Stremio.Headline1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream content from Stremio to your Roku device"
                android:textAppearance="@style/TextAppearance.Stremio.Body2"
                android:gravity="center"
                android:layout_marginHorizontal="24dp" />

        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Stremio.Card"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/status_indicator_online"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ready to discover Roku devices"
                    android:textAppearance="@style/TextAppearance.Stremio.Body1"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshButton"
                style="@style/Widget.Stremio.Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1.2"
                android:text="Refresh"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="8dp"
                app:icon="@drawable/ic_refresh"
                app:iconSize="16dp"
                app:iconPadding="2dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manualIpButton"
                style="@style/Widget.Stremio.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1.2"
                android:text="Manual IP"
                android:textSize="12sp"
                android:layout_marginHorizontal="4dp"
                android:paddingHorizontal="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testButton"
                style="@style/Widget.Stremio.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Test"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:paddingHorizontal="8dp"
                app:icon="@drawable/ic_play"
                app:iconSize="16dp"
                app:iconPadding="2dp"
                app:iconGravity="textStart" />

        </LinearLayout>

        <!-- Devices Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Devices"
                android:textAppearance="@style/TextAppearance.Stremio.Headline2"
                android:layout_marginBottom="16dp" />

            <!-- Devices List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/devicesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false" />

            <!-- Empty State -->
            <androidx.cardview.widget.CardView
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Stremio.Card"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="28dp">

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_roku_disconnected"
                        app:tint="@color/adaptive_text_hint"
                        android:alpha="0.7"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Roku devices found"
                        android:textAppearance="@style/TextAppearance.Stremio.Headline2"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make sure your Roku and phone are on the same WiFi network, then tap Refresh"
                        android:textAppearance="@style/TextAppearance.Stremio.Body2"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Stremio.Card"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to use"
                    android:textAppearance="@style/TextAppearance.Stremio.Headline2"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="1"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1"
                        android:background="@drawable/status_background_adaptive"
                        android:gravity="center"
                        android:textColor="@color/adaptive_text_on_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ensure your Roku and phone are on the same WiFi network"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="2"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1"
                        android:background="@drawable/status_background_adaptive"
                        android:gravity="center"
                        android:textColor="@color/adaptive_text_on_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select a Roku device from the list above"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="3"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1"
                        android:background="@drawable/status_background_adaptive"
                        android:gravity="center"
                        android:textColor="@color/adaptive_text_on_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Use Stremio's 'Play with External App' feature to send videos"
                        android:textAppearance="@style/TextAppearance.Stremio.Body1" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
